<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:text="Indirizzo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_gestione_viaggio_attivita_item_indirizzo"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/fragment_gestione_viaggio_attivita_item_nomeviaggio"
        android:layout_alignLeft="@+id/fragment_gestione_viaggio_attivita_item_nomeviaggio"
        android:layout_alignStart="@+id/fragment_gestione_viaggio_attivita_item_nomeviaggio" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_wallpaper_black_36dp"
        android:id="@+id/fragment_gestione_viaggio_attivita_icon"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3004dp"
        android:layout_marginEnd="414dp" />

    <TextView
        android:text="Titolo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_gestione_viaggio_attivita_item_nomeviaggio"
        android:textStyle="bold"
        android:textSize="25sp"

        android:layout_alignTop="@+id/fragment_gestione_viaggio_attivita_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="104dp"
        android:layout_marginEnd="104dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
        android:id="@+id/imageButton"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignTop="@+id/fragment_gestione_viaggio_attivita_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="72dp"
        android:layout_marginEnd="72dp" />

</RelativeLayout>