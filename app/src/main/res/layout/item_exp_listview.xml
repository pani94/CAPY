<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
        android:id="@+id/item_exp_listview_bottone"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <TextView
        android:text="ciao"
        android:layout_height="wrap_content"
        android:id="@+id/item_exp_listview_head"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_width="300dp"
        android:layout_alignTop="@+id/item_exp_listview_frecciagiu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="casual"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_18dp"
        android:id="@+id/item_exp_listview_frecciagiu"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignBottom="@+id/item_exp_listview_bottone"
        android:layout_alignRight="@+id/item_exp_listview_head"
        android:layout_alignEnd="@+id/item_exp_listview_head" />

</RelativeLayout>