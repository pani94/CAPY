<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/drawer_layout"
    android:orientation="vertical">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_gestione_viaggio_attivita_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.ale.myapplicatio.GestioneViaggioAttivitaListItemActivity">


    <ImageView
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_wallpaper_black_18dp"
        android:id="@+id/gestione_viaggio_attivita_list_item_foto"
        android:layout_height="500dp"
        android:layout_above="@+id/gestione_viaggio_attivita_list_item_indirizzo"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_width="1000dp" />


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gestione_viaggio_attivita_list_item_titolo"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:visibility="visible"
        android:layout_centerInParent="false"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/gestione_viaggio_attivita_list_item_orario"
        android:textColor="#000000"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/gestione_viaggio_attivita_list_item_telefono"
        android:layout_alignLeft="@+id/gestione_viaggio_attivita_list_item_telefono"
        android:layout_alignStart="@+id/gestione_viaggio_attivita_list_item_telefono" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:autoLink="web"
        android:textSize="18sp"
        android:id="@+id/gestione_viaggio_attivita_list_item_link"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/gestione_viaggio_attivita_list_item_orario"
        android:layout_alignLeft="@+id/gestione_viaggio_attivita_list_item_orario"
        android:layout_alignStart="@+id/gestione_viaggio_attivita_list_item_orario"
        android:textColorLink="?attr/actionModeSplitBackground"        />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gestione_viaggio_attivita_list_item_telefono"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/gestione_viaggio_attivita_list_item_indirizzo"
        android:layout_alignRight="@+id/gestione_viaggio_attivita_list_item_indirizzo"
        android:layout_alignEnd="@+id/gestione_viaggio_attivita_list_item_indirizzo" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gestione_viaggio_attivita_list_item_indirizzo"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
        android:id="@+id/gestione_viaggio_attivita_list_item_button"
        android:backgroundTint="@android:color/transparent"
        android:layout_gravity="left"
        android:layout_below="@+id/gestione_viaggio_attivita_list_item_link"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>

    <ListView
        android:layout_height="match_parent"
        android:id="@+id/lv_sliding_menu"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:layout_gravity="start"

        android:layout_width="400dp" />
</android.support.v4.widget.DrawerLayout>
