<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/drawer_layout"
    android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gestione_viaggio_galleria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.ale.myapplicatio.GestioneViaggioGalleriaActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_local_see_black_24dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:id="@+id/gestione_viaggio_galleria_icona"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:text="Galleria"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/gestione_viaggio_galleria_testo"

        />
        <Button
            android:id="@+id/btnSelectPhoto"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:text="@string/aggiungi_foto"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/bottone_crea_viaggio"/>

    <FrameLayout
        android:id="@+id/fragmentGestioneViaggioGalleria"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/btnSelectPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</LinearLayout>
    <ListView
        android:layout_height="match_parent"
        android:id="@+id/lv_sliding_menu"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:layout_gravity="start"
        android:layout_width="400dp" />
</android.support.v4.widget.DrawerLayout>