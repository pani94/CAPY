<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context="com.example.ale.myapplicatio.ITuoiPreferitiFragmentListItem">

    <ImageView
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_wallpaper_black_18dp"
        android:id="@+id/fragment_ituoi_preferiti_fragment_list_item_immagine"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_ituoi_preferiti_fragment_list_item_indirizzo"
        android:layout_width="match_parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_ituoi_preferiti_fragment_list_item_indirizzo"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_ituoi_preferiti_fragment_list_item_telefono"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/fragment_ituoi_preferiti_fragment_list_item_indirizzo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/fragment_ituoi_preferiti_list_item_orario"
        android:textColor="#000000"
        android:layout_below="@+id/fragment_ituoi_preferiti_fragment_list_item_telefono"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:autoLink="web"
        android:textSize="18sp"
        android:id="@+id/fragment_ituoi_preferiti_fragment_list_item_link"
        android:layout_below="@+id/fragment_ituoi_preferiti_list_item_orario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:textColorLink="?attr/actionModeSplitBackground" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_ituoi_preferiti_fragment_list_item_bottoneaggiungi"
        android:layout_below="@+id/fragment_ituoi_preferiti_fragment_list_item_link"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_ituoi_preferiti_fragment_list_item_titolo"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:visibility="visible"
        android:layout_centerInParent="false"
        android:layout_marginTop="105dp"
        android:textAlignment="center"
        android:shadowColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
