<RelativeLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.example.ale.myapplicatio.RicercaActivityFragmentListItem"
    >

    <ScrollView
        android:id="@+id/ricerca_activity_fragment_list_item_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                >

                <ImageView
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_wallpaper_black_18dp"
                    android:id="@+id/RicercaActivityFragmentListItemImmagine"
                    android:layout_width="match_parent"
                    android:layout_height="600dp" />

                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/RicercaActivityFragmentListItemTitolo"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:visibility="visible"
                    android:layout_centerInParent="false"
                    android:textAlignment="center"
                    android:shadowColor="@android:color/black"
                    android:layout_weight="0.2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="132dp" />


            </RelativeLayout>



            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RicercaActivityFragmentListItemIndirizzo"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.2"
                />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RicercaActivityFragmentListItemTelefono"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_below="@+id/RicercaActivityFragmentListItemIndirizzo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="0.2"
                />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/RicercaActivityFragmentListItemWeekDayText"
                android:textColor="#000000"
                android:layout_below="@+id/RicercaActivityFragmentListItemTelefono"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.2"
                />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/RicercaActivityFragmentListItemOrario"
                android:layout_below="@+id/RicercaActivityFragmentListItemLink"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="19dp"
                android:layout_weight="0.2"
                />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:linksClickable="true"
                android:autoLink="web"
                android:textSize="18sp"
                android:id="@+id/RicercaActivityFragmentListItemLink"
                android:layout_below="@+id/RicercaActivityFragmentListItemWeekDayText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp"
                android:textColorLink="?attr/actionModeSplitBackground"
                android:layout_weight="0.2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
                    android:id="@+id/fragment_ricerca_activity_list_item_bottonepiu"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginLeft="46dp"
                    android:layout_marginBottom="57dp"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_gravity="left"
                    android:layout_weight="0.5"
                    />

                <ImageButton
                    android:layout_height="80dp"
                    android:id="@+id/preferiti_star"
                    android:layout_width="55dp"
                    app:srcCompat="@drawable/grey_star"
                    android:background="@null"
                    android:layout_marginBottom="11dp"
                    android:layout_alignBottom="@+id/fragment_ricerca_activity_list_item_bottonepiu"
                    android:layout_toRightOf="@+id/RicercaActivityFragmentListItemTitolo"
                    android:layout_toEndOf="@+id/RicercaActivityFragmentListItemTitolo"
                    android:layout_gravity="right"
                    android:layout_weight="0.5"
                    />


            </LinearLayout>

            <com.example.ale.myapplicatio.CustomMapView
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:id="@+id/mapView_ricerca_activity_list_item"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false" />


        </LinearLayout>

    </ScrollView>
    <!-- Paola puzza -->
</RelativeLayout>
