<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ale.myapplicatio.RicercaActivityFragmentListItem">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="TextView"
        android:layout_width="209dp"
        android:layout_height="30dp"
        android:id="@+id/RicercaActivityFragmentListItemTitolo" />

    <ImageView
        android:layout_width="101dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/RicercaActivityFragmentListItemImmagine"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RicercaActivityFragmentListItemOrario"
        android:layout_alignBottom="@+id/RicercaActivityFragmentListItemImmagine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <com.google.android.gms.maps.MapView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapView"
        android:layout_below="@+id/RicercaActivityFragmentListItemLink"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:autoLink="web"
        android:id="@+id/RicercaActivityFragmentListItemLink"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RicercaActivityFragmentListItemTelefono"
        android:layout_alignBottom="@+id/RicercaActivityFragmentListItemLink"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RicercaActivityFragmentListItemIndirizzo"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/RicercaActivityFragmentListItemTelefono"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RicercaActivityFragmentListItemIndirizzo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:id="@+id/RicercaActivityFragmentListItemWeekDayText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/bottone_aggiungipreferiti"
        android:layout_alignBaseline="@+id/bottone_aggiungiaviaggio"
        android:layout_alignBottom="@+id/bottone_aggiungiaviaggio"
        android:layout_toRightOf="@+id/RicercaActivityFragmentListItemTitolo"
        android:layout_toEndOf="@+id/RicercaActivityFragmentListItemTitolo"
        android:text="Preferito" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/bottone_aggiungiaviaggio"
        android:layout_alignBottom="@+id/mapView"
        android:layout_toRightOf="@+id/RicercaActivityFragmentListItemLink"
        android:layout_toEndOf="@+id/RicercaActivityFragmentListItemLink"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

</RelativeLayout>
