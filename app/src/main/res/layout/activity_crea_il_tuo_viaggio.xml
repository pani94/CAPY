<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:orientation="vertical">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:x="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_crea_il_tuo_viaggio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ale.myapplicatio.CreaIlTuoViaggioActivity">

    <TextView
        android:text="Crea il tuo viaggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/testo"
        android:textSize="40sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="51dp"
        android:id="@+id/editTextNomeViaggio"
        android:hint="Nome viaggio"
        android:layout_below="@+id/testo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Nome viaggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomeViaggio"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/editTextNomeViaggio"
        android:layout_alignBottom="@+id/editTextNomeViaggio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <Button
        android:text="FATTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFatto"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp" />

    <TextView
        android:text="@string/init_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrivo"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/partenza"
        android:layout_alignStart="@+id/partenza" />

    <Button
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_arrivo"
        android:layout_alignBaseline="@+id/arrivo"
        android:layout_alignBottom="@+id/arrivo"
        android:layout_alignLeft="@+id/button_partenza"
        android:layout_alignStart="@+id/button_partenza" />

    <TextView
        android:id="@+id/partenza"
        android:text="@string/init_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_partenza"
        android:layout_alignBottom="@+id/button_partenza"
        android:layout_alignLeft="@+id/editTextNomeViaggio"
        android:layout_alignStart="@+id/editTextNomeViaggio" />

    <Button
        android:id="@+id/button_partenza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DA"
        android:onClick="showDatePickerDialog (CreaIlTuoViaggioActivity)"
        android:layout_below="@+id/editTextNomeViaggio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />


</RelativeLayout>

    <ListView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/lv_sliding_menu"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:layout_gravity="start"
        />
</android.support.v4.widget.DrawerLayout>
