<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="#FFFFFF"
    android:orientation="vertical">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:x="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_crea_il_tuo_viaggio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ale.myapplicatio.CreaIlTuoViaggioActivity">


    <TextView
        android:text="Crea il tuo viaggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:textColor="#000000"
        android:id="@+id/testo"
        android:textSize="40sp" />

    <requestFocus android:id="@+id/requestFocus" />


    <Button
        android:text="FATTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFatto"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp" />

    <TextView
        android:id="@+id/partenza"
        android:text="@string/init_text"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textAlignment="center"
        android:layout_below="@+id/button_partenza"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="ARRIVO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_arrivo"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonFatto"
        android:layout_alignStart="@+id/buttonFatto" />

    <TextView
        android:text="@string/init_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrivo"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/button_arrivo"
        android:layout_alignLeft="@+id/partenza"
        android:layout_alignStart="@+id/partenza" />

    <Button
        android:id="@+id/button_partenza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARTENZA"
        android:onClick="showDatePickerDialog (CreaIlTuoViaggioActivity)"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/editTextNomeViaggio"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/editTextNomeViaggio"
        android:textColor="#000000"
        android:hint="        Nome del viaggio"
        android:textSize="25sp"
        android:textColorLink="@color/colorPrimaryDark"
        android:layout_below="@+id/testo"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

    <ListView
        android:layout_height="match_parent"
        android:id="@+id/lv_sliding_menu"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:layout_gravity="start"
        android:layout_width="400dp" />
</android.support.v4.widget.DrawerLayout>
